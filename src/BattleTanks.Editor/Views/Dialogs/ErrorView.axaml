<UserControl
    x:Class="BattleTanks.Editor.Views.Dialogs.ErrorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:BattleTanks.Editor.ViewModels.Dialogs;assembly=BattleTanks.Editor"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="views:ErrorViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <views:ErrorViewModel />
    </Design.DataContext>
    <DockPanel Margin="5">
        <DockPanel DockPanel.Dock="Bottom">
            <Button
                HorizontalAlignment="Right"
                Command="{Binding Close}"
                Content="Close" />
        </DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="{Binding ErrorMessage, Mode=OneWay}" />
            <TextBlock Text="{Binding Exception, Mode=OneWay}" />
        </Grid>
    </DockPanel>
</UserControl>
